<h1>welcome all employee</h1>
   
<table border="1">
<tr><th>EmpID</th><th>EmpName</th><th>City</th><th>Number</th><th>EmpEmail</th><th>qualification</th><th>password</th><th>Status</th></tr>
<c:forEach items="${Employee }" var="res">
<c:set var="role" value="${requestScope.Mgr}"/>
<c:set var="t" value="${res.role}"/>
<c:choose>
<c:when test = "${requestScope.Mgr}">
<c:if test="${fn:startsWith(t, 'T')}">
<tr>	
<td>${res.empId }</td>
<td>${res.empName }</td>
<td>${res.city }</td>
<td>${res.contactNumber}</td>
<td>${res.empEmail }</td>
<td>${res.empQualification }</td>
<td>${res.password }</td>

<td>${res.status} </td>
<td><a href="pendingREquest?id=${res.empId }">Approve</a>
</tr>
</c:if>
</c:when>

<c:otherwise>
<tr>	
<td>${res.empId }</td>
<td>${res.empName }</td>
<td>${res.city }</td>
<td>${res.contactNumber}</td>
<td>${res.empEmail }</td>
<td>${res.empQualification }</td>
<td>${res.password }</td>

<td>${res.status} </td>
<td><a href="pendingREquest?id=${res.empId }">Approve</a>
</tr>
</c:otherwise>
</c:choose>
</c:forEach>
</table>
</body>
